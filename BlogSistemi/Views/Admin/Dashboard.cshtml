@model List<BlogSistemi.Models.Gonderi>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard - BT Blog Paneli</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to bottom right, #f8f9fa, #e9ecef);
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        .navbar-custom {
            background: linear-gradient(to right, #0d3b66, #00509d);
            padding: 16px 30px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
        }

        .navbar-brand {
            background-color: white;
            color: #00509d;
            font-weight: bold;
            width: 42px;
            height: 42px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            margin-right: 10px;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: 500;
            margin-right: 20px;
        }

            .navbar-nav .nav-link:hover {
                color: #ffc107 !important;
            }

        .container {
            max-width: 1200px;
            margin-top: 40px;
            margin-bottom: 60px;
        }

        .card-stat {
            border-radius: 14px;
            padding: 30px;
            background: white;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
            transition: transform 0.2s ease;
            text-align: center;
        }

            .card-stat:hover {
                transform: translateY(-4px);
            }

            .card-stat i {
                font-size: 2rem;
                margin-bottom: 10px;
                color: #00509d;
            }

            .card-stat h3 {
                font-size: 2rem;
                margin: 0;
            }

            .card-stat p {
                margin: 0;
                color: #6c757d;
                font-size: 0.9rem;
            }

        .section-title {
            font-size: 1.3rem;
            font-weight: bold;
            margin-top: 50px;
            margin-bottom: 20px;
            color: #343a40;
        }

        .post-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 16px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .post-card:hover {
                transform: scale(1.015);
            }

            .post-card img {
                width: 100%;
                height: 180px;
                object-fit: cover;
            }

            .post-card .p-body {
                padding: 15px;
            }

            .post-card h5 {
                margin-bottom: 10px;
                font-weight: 600;
            }

        .post-meta {
            font-size: 0.85rem;
            color: #6c757d;
        }

        .post-desc {
            font-size: 0.9rem;
            color: #444;
        }

        .footer {
            background: transparent;
            text-align: center;
            color: #666;
            padding: 20px 10px;
            font-size: 0.9rem;
        }

            .footer .social-icons a {
                color: #555;
                margin: 0 12px;
                font-size: 1.3rem;
                transition: color 0.3s ease;
            }

                .footer .social-icons a:hover {
                    color: #0d6efd;
                }

            .footer .x-icon svg {
                width: 18px;
                height: 18px;
                fill: currentColor;
                vertical-align: middle;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">BT</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/GonderiEkle">Gönderi Ekle</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Kategoriler">Kategoriler</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Login">Çıkış</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <div class="container">

            <!-- Statistics -->
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card-stat">
                        <i class="fas fa-file-alt"></i>
                        <h3>12</h3>
                        <p>Toplam Gönderi</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-stat">
                        <i class="fas fa-folder"></i>
                        <h3>5</h3>
                        <p>Kategori Sayısı</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-stat">
                        <i class="fas fa-eye"></i>
                        <h3>438</h3>
                        <p>Bugünkü Görüntülenme</p>
                    </div>
                </div>
            </div>

            <!-- Posts -->
            <div class="section-title">📢 Son Eklenen Gönderiler</div>
            <div class="row g-4">
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-md-6">
                            <a href="/Admin/GonderiDetay/@item.Id" style="text-decoration: none; color: inherit;">
                                <div class="post-card">
                                    <img src="@item.ResimYolu" alt="Resim">
                                    <div class="p-body">
                                        <h5>@item.Baslik</h5>
                                        <div class="post-meta">📅 @item.Tarih.ToShortDateString() · 📂 @item.Kategori?.Ad</div>
                                        <p class="post-desc">@item.Icerik?.Substring(0, Math.Min(item.Icerik.Length, 100))...</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning">Henüz gönderi eklenmemiş.</div>
                }
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto">
        <div class="social-icons mb-2" style="display: flex; justify-content: center; align-items: center; gap: 20px;">
            <a href="https://www.instagram.com/berkantturkmen37" target="_blank" title="Instagram" style="color: #333; text-decoration: none;">
                <i class="fab fa-instagram fa-lg"></i>
            </a>

            <a href="https://x.com/berkantturkmenn" target="_blank" title="X (Twitter)" style="color: #333; text-decoration: none;">
                <svg viewBox="0 0 24 24" fill="currentColor" style="width: 18px; height: 18px; vertical-align: middle;">
                    <path d="M21.543 2H17.43L12 9.882 6.57 2H2.457L10.41 12 2 22h4.113L12 14.118 17.887 22H22l-8.41-10z" />
                </svg>
            </a>

            <a href="https://www.linkedin.com/in/berkantturkmen" target="_blank" title="LinkedIn" style="color: #333; text-decoration: none;">
                <i class="fab fa-linkedin fa-lg"></i>
            </a>

            <a href="https://github.com/berkantturkmen" target="_blank" title="GitHub" style="color: #333; text-decoration: none;">
                <i class="fab fa-github fa-lg"></i>
            </a>
        </div>

        <div style="color: #666; font-size: 0.9rem;">
            © 2025 Blog Yönetim Sistemi · Designed by <strong>Berkant Türkmen</strong>
        </div>
    </footer>

</body>
</html>
