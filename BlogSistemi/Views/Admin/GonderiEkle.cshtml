@model BlogSistemi.Models.Gonderi
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Gönderi Ekle - BT Blog Paneli</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to bottom right, #f8f9fa, #e9ecef);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar-custom {
            background: linear-gradient(to right, #0d3b66, #00509d);
            padding: 16px 30px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
        }

        .navbar-brand {
            background-color: white;
            color: #00509d;
            font-weight: bold;
            width: 42px;
            height: 42px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            margin-right: 10px;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: 500;
            margin-right: 20px;
        }

            .navbar-nav .nav-link:hover {
                color: #ffc107 !important;
            }

        .form-wrapper {
            max-width: 800px;
            margin: 60px auto;
            background: white;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        }

            .form-wrapper h4 {
                font-weight: 600;
                margin-bottom: 30px;
                text-align: center;
            }

        .btn-success {
            background-color: #198754;
            border-color: #198754;
        }

        .footer {
            background: transparent;
            text-align: center;
            color: #666;
            padding: 20px 10px;
            font-size: 0.9rem;
            margin-top: auto;
        }

            .footer .social-icons a {
                color: #555;
                margin: 0 12px;
                font-size: 1.3rem;
                transition: color 0.3s ease;
            }

                .footer .social-icons a:hover {
                    color: #0d6efd;
                }

            .footer .x-icon svg {
                width: 18px;
                height: 18px;
                fill: currentColor;
                vertical-align: middle;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">BT</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/GonderiEkle">Gönderi Ekle</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Kategoriler">Kategoriler</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Login">Çıkış</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Form -->
    <div class="form-wrapper">
        <h4>📝 Yeni Gönderi Oluştur</h4>
        <form asp-action="GonderiEkle" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="Baslik" class="form-label">Başlık</label>
                <input type="text" class="form-control" id="Baslik" name="Baslik" required />
            </div>

            <div class="mb-3">
                <label for="KategoriId" class="form-label">Kategori</label>
                <select class="form-select" id="KategoriId" name="KategoriId" required>
                    <option value="">Kategori seçiniz</option>
                    @foreach (var k in ViewBag.Kategoriler)
                    {
                        <option value="@k.Id">@k.Ad</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label for="Icerik" class="form-label">İçerik</label>
                <textarea class="form-control" id="Icerik" name="Icerik" rows="6" required></textarea>
            </div>

            <div class="mb-3">
                <label for="Resim" class="form-label">Kapak Görseli</label>
                <input type="file" class="form-control" id="Resim" name="Resim" accept="image/*" />
            </div>

            <button type="submit" class="btn btn-success w-100">Gönderiyi Kaydet</button>
        </form>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto">
        <div class="social-icons mb-2" style="display: flex; justify-content: center; align-items: center; gap: 20px;">
            <a href="https://www.instagram.com/berkantturkmen37" target="_blank" title="Instagram" style="color: #333; text-decoration: none;">
                <i class="fab fa-instagram fa-lg"></i>
            </a>

            <a href="https://x.com/berkantturkmenn" target="_blank" title="X (Twitter)" style="color: #333; text-decoration: none;">
                <svg viewBox="0 0 24 24" fill="currentColor" style="width: 18px; height: 18px; vertical-align: middle;">
                    <path d="M21.543 2H17.43L12 9.882 6.57 2H2.457L10.41 12 2 22h4.113L12 14.118 17.887 22H22l-8.41-10z" />
                </svg>
            </a>

            <a href="https://www.linkedin.com/in/berkantturkmen" target="_blank" title="LinkedIn" style="color: #333; text-decoration: none;">
                <i class="fab fa-linkedin fa-lg"></i>
            </a>

            <a href="https://github.com/berkantturkmen" target="_blank" title="GitHub" style="color: #333; text-decoration: none;">
                <i class="fab fa-github fa-lg"></i>
            </a>
        </div>

        <div style="color: #666; font-size: 0.9rem;">
            © 2025 Blog Yönetim Sistemi · Designed by <strong>Berkant Türkmen</strong>
        </div>
    </footer>

</body>
</html>
